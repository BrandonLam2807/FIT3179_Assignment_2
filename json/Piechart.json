{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 350,
    "title": "Total number of people that were Alive Vs Not Alive",
    "description": "A simple donut chart with embedded data.",
    "data": {
      "values": [
        {"Status": "Homeless", "count": 88476},
        {"Status": "Evacuated", "count": 134314},
        {"Status": "Injured", "count": 55006},
        {"Status": "Death", "count": 22566}
      ]
    },
    "background": "#d6dbdf",
    "layer": [
      {
        "mark": {"type": "arc", "innerRadius": 80}, 
        "encoding": {
          "theta": {"field": "count", "type": "quantitative"},
          "color": {
            "field": "Status", 
            "type": "nominal",
            "legend": {"title": "Status"}
          },
          "tooltip": [
            {"field": "Status", "type": "nominal", "title": "Status"},
            {"field": "count", "type": "quantitative", "title": "Number of people"}
          ]
        }
      },
      {
        "mark": {
          "type": "text", 
          "radiusOffset": -30, 
          "fontSize": 12,
          "align": "center",
          "baseline": "middle"
        },
        "encoding": {
          "theta": {"field": "count", "type": "quantitative"},
          "radius": {"value": 85}, 
          "color": {"value": "black"}, 
          "text": {"field": "count", "type": "quantitative"}
        }
      },
      {
        "mark": {
          "type": "text",
          "fontSize": 14,
          "fontWeight": "bold",
          "dy": 200,  
          "color": "#000000"  
        },
        "encoding": {
          "text": {"value": "Evacuated has the most total number: 134,314"}
        }
      }
    ]
  }